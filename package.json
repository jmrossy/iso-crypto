{
  "name": "@pedrouid/iso-crypto",
  "description": "Isomorphic Cryptography Library for AES, HMAC and SHA2",
  "version": "1.1.0",
  "author": "Pedro Gomes <github.com/pedrouid>",
  "license": "MIT",
  "keywords": [
    "crypto",
    "cryptography",
    "isomorphic",
    "aes",
    "hmac",
    "sha2"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/cjs/node/index.js",
  "exports": {
    ".": {
      "node": "./node/index.js",
      "browser": "./browser/index.js",
      "default": "./fallback/index.js"
    },
    "./sync": {
      "node": "./node/sync.js",
      "browser": "./browser/sync.js",
      "default": "./fallback/sync.js"
    }
  },
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/pedrouid/iso-crypto",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrouid/iso-crypto.git"
  },
  "bugs": {
    "url": "https://github.com/pedrouid/iso-crypto/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf dist",
    "build:cjs": "yarn tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build:esm": "yarn tsc -p tsconfig.esm.json",
    "build": "yarn clean && yarn build:cjs && yarn build:umd",
    "test": "tsdx test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build",
    "publish:beta": "yarn publish --tag=beta"
  },
  "dependencies": {
    "@pedrouid/environment": "^1.0.1",
    "@pedrouid/iso-random": "^1.1.1",
    "aes-js": "^3.1.2",
    "enc-utils": "^3.0.0",
    "hash.js": "^1.1.7"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.1.3",
    "@types/aes-js": "^3.1.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "husky": "^4.3.0",
    "tsdx": "^0.14.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
